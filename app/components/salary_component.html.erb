<%= content_tag(:tr) do %>
  <%= render(TableBoldDataComponent.new(text: number_to_currency(@salary.amount))) %>
  <%= render(TableDataComponent.new(text: @salary.start_date)) %>
  <%= render(TableDataComponent.new(text: @salary.end_date)) %>
  <%= content_tag(:td, class: "px-6 py-4 whitespace-nowrap text-sm text-gray-500") do %>
    <% if @salary.current_salary %>
      <%= render(BadgeComponent.new(text: "Yes", color: "green")) %>
    <% else %>
      <%= render(BadgeComponent.new(text: "No", color: "gray")) %>
    <% end %>
  <% end %>
  <%= render(TableDataComponent.new(text: time_ago_in_words(@salary.updated_at))) %>
  <%= render(TableDataLinkComponent.new(text: "Edit", path: edit_salary_path(@salary))) %>
  <%= render(TableDataLinkComponent.new(text: "Delete", path: salary_path(@salary), data: { method: :delete })) %>
<% end %>
