<%= content_tag(:div, class: "flex flex-col") do %>
  <%= content_tag(:div, class: "-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8") do %>
    <%= content_tag(:div, class: "py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8") do %>
      <%= content_tag(:div, class: "shadow overflow-hidden border-b border-gray-200 sm:rounded-lg") do %>
        <%= content_tag(:table, class: "min-w-full divide-y divide-gray-200") do %>
          <%= content_tag(:thead, class: "bg-gray-50") do %>
            <%= content_tag(:tr) do %>
              <%= render(TableHeaderComponent.new(text: "Amount")) %>
              <%= render(TableHeaderComponent.new(text: "Start Date")) %>
              <%= render(TableHeaderComponent.new(text: "End Date")) %>
              <%= render(TableHeaderComponent.new(text: "Current")) %>
              <%= render(TableHeaderComponent.new(text: "Last Updated")) %>
              <%= render(BlankTableHeaderComponent.new(text: "Edit")) %>
              <%= render(BlankTableHeaderComponent.new(text: "Delete")) %>
            <% end %>
          <% end %>
          <%= content_tag(:tbody, class: "bg-white divide-y divide-gray-200") do %>
            <%= render(SalaryComponent.with_collection(@salaries)) %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
