<%= content_tag(:div, class: "rounded-md bg-#{@color}-50 p-4 hidden", data: { controller: "notification" }) do %>
  <%= content_tag(:div, class: "lg:px-96") do %>
    <%= content_tag(:div, class: "flex") do %>
      <%= content_tag(:div, class: "flex-shrink-0") do %>
        <%= inline_svg_tag(
          "icons/#{@icon_name}.svg",
          class: "h-5 w-5 text-#{@color}-400",
          aria_hidden: true
        )%>
      <% end %>
      <%= content_tag(:div, class: "ml-3") do %>
        <%= content_tag(:p, @title, class: "text-sm font-medium text-#{@color}-800" ) %>
        <% if @list %>
          <%= content_tag(:div, class: "mt-2 text-sm text-#{@color}-700") do %>
            <%= content_tag(:ul, class: "list-disc pl-5 space-y-1") do %>
              <% @list.each do |item| %>
                <%= content_tag(:li, item) %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
      <%= content_tag(:div, class: "ml-auto pl-3") do %>
        <%= content_tag(:div, class: "-mx-1.5 -my-1.5") do %>
          <%= content_tag(:button, data: { action: "notification#close" }, class: "inline-flex bg-#{@color}-50 rounded-md p-1.5 text-#{@color}-500 hover:bg-#{@color}-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-#{@color}-50 focus:ring-#{@color}-600") do %>
            <%= content_tag(:span, "Dismiss", class: "sr-only") %>
            <%= inline_svg_tag(
              "icons/x.svg",
              class: "h-5 w-5",
              aria_hidden: true
            )%>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
