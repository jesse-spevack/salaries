<%= content_tag(:div, data: { alert_target: "alert", alert_alert_id_value: 0 }, class: "hidden fixed z-10 inset-0 overflow-y-auto") do %>
  <%= content_tag(:div, class: "flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0") do %>
    <%= content_tag(:div, aria_hidden: true, class: "fixed inset-0 transition-opacity") do %>
      <%= content_tag(:div, class: "absolute inset-0 bg-gray-500 opacity-75") do %>
      <% end %>
    <% end %>
    <%= content_tag(:span, aria_hidden: true, class: "hidden sm:inline-block sm:align-middle sm:h-screen") do %>
      &#8203;
    <% end %>
    <%= content_tag(
        :div,
        role: "dialog",
        aria_modal: true,
        aria_labelledby: "modal-headline",
        class: "inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6"
      ) do 
    %>
      <%= content_tag(:div, class: "sm:flex sm:items-start") do %>
        <%= content_tag(:div, class: "mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10") do %>
          <!-- Heroicon name: exclamation -->
          <svg class="h-6 w-6 text-red-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        <% end %>
        <%= content_tag(:div, class: "mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left") do %>
          <%= content_tag(:h3, @header, class: "text-lg leading-6 font-medium text-gray-900", id: "modal-headline") %>
          <%= content_tag(:div, class: "mt-2") do %>
            <%= content_tag(:p, @body, class: "text-sm text-gray-500") %>
          <% end %>
        <% end %>
      <% end %>
      <%= content_tag(:div, class: "mt-5 sm:mt-4 sm:flex sm:flex-row-reverse") do %>
        <%= button_tag("Delete", data: { action: "alert#delete" }, type: "button", class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm") %>
        <%= button_tag("Cancel", data: { action: "alert#cancel" }, type: "button", class: "mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm") %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
