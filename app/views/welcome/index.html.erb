<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <img class="mx-auto h-12 w-auto" src="https://d682ma8ami8n4.cloudfront.net/images/TuringSchool_LogoMark_Gray.png" alt="Turing Salaries">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Welcome to Salaries
    </h2>
    <div class="mt-6 grid justify-items-center">
      <% if @current_user %>
        <h3 class="text-center text-lg">
          Your Turing Slack ID: <%= @current_user.slack_id %>
        </h3>
        <%= link_to 'Logout', logout_path, method: :delete, class: "mt-3 text-lg no-underline hover:underline" %>
      <% else %>
          <a href="auth/slack"><img src="https://api.slack.com/img/sign_in_with_slack.png"/></a>
      <% end %>
      <p class="mt-6 text-sm">
        The time is now: <%= Time.now %>
      </p>
    </div>
  </div>
</div>